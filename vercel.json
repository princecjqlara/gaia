{
    "crons": [
        {
            "path": "/api/cron/ai-followup",
            "schedule": "*/15 * * * *"
        },
        {
            "path": "/api/cron/ai-silence",
            "schedule": "*/30 * * * *"
        }
    ],
    "rewrites": [
        {
            "source": "/room/:slug*",
            "destination": "/index.html"
        },
        {
            "source": "/book/:pageId*",
            "destination": "/index.html"
        },
        {
            "source": "/((?!api|assets|favicon|.*\\..*).*)",
            "destination": "/index.html"
        }
    ]
}